{
    "compilerOptions": {
      "target": "ES6", 
      "module": "CommonJS", 
      "outDir": "./dist",   // Ensure this is the directory for compiled JS files
      "rootDir": "./src",   // All your TypeScript files are inside src/
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],  // Only include .ts files from src
    "exclude": ["node_modules", "test"]  // Exclude node_modules and test folders from being copied
  }
  